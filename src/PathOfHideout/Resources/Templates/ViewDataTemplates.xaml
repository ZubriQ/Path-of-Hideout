<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:PathOfHideout.MVVM.View"
                    xmlns:viewModel="clr-namespace:PathOfHideout.MVVM.ViewModel">
    <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
        <view:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type TypeName=viewModel:SettingsViewModel}">
        <view:SettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type TypeName=viewModel:HelpViewModel}">
        <view:HelpView />
    </DataTemplate>
</ResourceDictionary>
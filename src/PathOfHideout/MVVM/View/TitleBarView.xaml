<UserControl x:Class="PathOfHideout.MVVM.View.TitleBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PathOfHideout.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="28"
             d:DesignWidth="260">

    <DockPanel>
        <!-- Header -->
        <TextBlock Text="Path of Hideout"
                   VerticalAlignment="Center"
                   Foreground="{StaticResource Silver200Brush}"
                   Margin="10,0,0,0"
                   FontWeight="DemiBold"
                   FontSize="14" />

        <!-- Buttons -->
        <DockPanel HorizontalAlignment="Right">
            <Button x:Name="BtnMinimize"
                    Height="28"
                    Width="36"
                    Template="{StaticResource MinimizeButton}"
                    Click="BtnMinimize_Click"
                    ToolTip="Minimize" />
            <Button x:Name="BtnClose"
                    Height="28"
                    Width="36"
                    Template="{StaticResource CloseButton}"
                    Click="BtnClose_Click"
                    ToolTip="Close" />
        </DockPanel>
    </DockPanel>
</UserControl>

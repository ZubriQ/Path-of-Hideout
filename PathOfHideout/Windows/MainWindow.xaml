<Window x:Class="PathOfHideout.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathOfHideout"
        mc:Ignorable="d"
        Title="Path of Hideout" Height="150" Width="300">
    <StackPanel VerticalAlignment="Center">

        <TextBox x:Name="TxtHideoutFilePath"
                 Height="26"
                 Width="150" />

        <!-- Coordinates -->
        <DockPanel HorizontalAlignment="Center">
            <TextBox x:Name="TxtXCoordinate"
                     Height="26"
                     Width="40"
                     Margin="5" />

            <TextBox x:Name="TxtYCoordinate"
                     Height="26"
                     Width="40"
                     Margin="5" />
        </DockPanel>

        <Button x:Name="BtnMoveDecorations"
                Height="26"
                Width="150"
                Content="Move"
                Click="BtnMoveDecorations_Click" />
    </StackPanel>
</Window>

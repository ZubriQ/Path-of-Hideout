<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate TargetType="Button"
                     x:Key="MinimizeButton">
        <Border x:Name="BtnMinimize"
                BorderThickness="0"
                Background="Transparent">

            <Viewbox>
                <Canvas Width="24"
                        Height="24"
                        Margin="6">
                    <Path Fill="{DynamicResource Silver600Brush}"
                          Data="M19,13H5V11H19V13Z" />
                </Canvas>
            </Viewbox>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="true">
                <Setter TargetName="BtnMinimize"
                        Property="Background"
                        Value="{DynamicResource Silver700Brush}" />
            </Trigger>

            <Trigger Property="IsPressed"
                     Value="true">
                <Setter TargetName="BtnMinimize"
                        Property="Background"
                        Value="{DynamicResource Silver800Brush}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>